<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
    
  <configuration>
  <properties resource="co/kr/jsj/mybatis/db.properties"/>
  <typeAliases>
  	<typeAlias type="co.kr.jsj.model.StoreDto" alias="StoreDto"/>
	<typeAlias type="co.kr.jsj.model.GoodsDto" alias="GoodsDto" />
  </typeAliases>
  <!-- DB환경 설정 -->
  	<environments default="development">
  		<environment id="development">
  		<transactionManager type="JDBC"/>
  		<dataSource type="POOLED">
  			<property name="driver" value="${driver}"/>
  			<property name="url" value="${url}"/>
  			<property name="username" value="${username}"/>
  			<property name="password" value="${password}"/>
  		</dataSource>
  		</environment>
  	</environments>
  	<!-- 연결 -->
  	<mappers>
  		<mapper resource="co/kr/jsj/mybatis/storeMapper.xml"/>
  		<mapper resource="co/kr/jsj/mybatis/goodsMapper.xml"/>
  	</mappers>
  </configuration>